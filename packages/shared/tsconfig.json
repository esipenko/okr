{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2017",
    "allowJs": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true
  }
}
